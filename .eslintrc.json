{
  "plugins": ["@typescript-eslint"],
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    // I suggest you add those two rules:
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/no-explicit-any": "error",
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "target": "./domain",
            "from": "./application"
          },
          {
            "target": "./domain",
            "from": "./components"
          },
          {
            "target": "./domain",
            "from": "./hooks"
          },
          {
            "target": "./domain",
            "from": "./styles"
          },
          {
            "target": "./domain",
            "from": "./pages"
          },

          {
            "target": "./application",
            "from": "./components"
          },
          {
            "target": "./application",
            "from": "./hooks"
          },
          {
            "target": "./application",
            "from": "./styles"
          },
          {
            "target": "./application",
            "from": "./pages"
          },

          {
            "target": "./hooks",
            "from": "./pages"
          },

          {
            "target": "./components",
            "from": "./pages"
          }
        ]
      }
    ]
  }
}
